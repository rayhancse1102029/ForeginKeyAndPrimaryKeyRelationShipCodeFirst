
@model CrudProject.Areas.Employee.Models.EmployeeViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="formSection">
    <div class="card">
        <div class="card-header">
            <h5 style="font-weight: bold;"> Create New Employee</h5>
        </div>
        <div class="card-body">
            @*asp-area="Employee" asp-controller="Employee" asp-action="Index" method="post"*@
            <form id="myForm">
                <input type="hidden" value="0" name="id" id="id"/>
                <div class="form-group row">
                    <label class="col-form-label col-md-2 col-sm-2">Name</label>
                    <div class="col-md-10 col-sm-10">
                        <input type="text" name="name" id="name" class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-md-2 col-sm-2">Gender</label>
                    <div class="col-md-10 col-sm-10">
                        <select name="genderId" id="genderId" class="form-control">
                            <option value="0">----Select Gender----</option>
                            @foreach (var item in Model.Genders)
                            {
                                <option value="@item.genderId">@item.name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-md-2 col-sm-2">Email</label>
                    <div class="col-md-10 col-sm-10">
                        <input type="email" name="email" id="email" class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label col-md-2 col-sm-2">Phone</label>
                    <div class="col-md-10 col-sm-10">
                        <input type="text" name="phone" id="phone" class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12 col-sm-12">
                        <input type="button" id="myFormSubmitBtn" class="btn btn-success" value="Add" style="float: right"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

<br/><br/>

<section>
    <div class="card">
        <div class="card-header">
            <h4 style="font-weight: bold">List of Employee</h4>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>SL#</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Employees)
                {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.name</td>
                        <td>@item.Gender.name</td>
                        <td>@item.email</td>
                        <td>@item.phone</td>
                        <td>
                            <button class="btn btn-success" onclick="editFun(@item.id, '@item.name','@item.email','@item.phone')">Edit</button>
                            <button class="btn btn-primary" onclick="viewFun(@item.id)">View</button>
                            <button class="btn btn-danger" onclick="deleteFun(@item.id)">Delete</button>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</section>

@section Scripts
{
    <script>
        $(document).ready(function () {

            $("#myFormSubmitBtn").click(function() {

                var myData = $("#myForm").serialize();

                $.ajax({
                    url: "/Employee/Employee/Index",
                    type: "POST",
                    data: myData,
                    success: function(response) {

                        if (response === "success") {

                            alert("Save Successfully");
                        } else {
                            alert("Something is Wrong please try again !!!");
                        }

                    }
                 });

            });

        });

        function editFun(id, name, email, phone) {

            $("#id").val(id);
            $("#name").val(name);
            $("#email").val(email);
            $("#phone").val(phone);

            window.location.href = "#formSection";
        }

        function viewFun(id) {

            var myData = {id: id};

            $.ajax({
                url: "/Employee/Employee/ViewEmployeeInfo/",
                type: "POST",
                data: myData,
                success: function (response) {

                    if (response != null) {

                        alert("ID = " + response.id + " \n Name = " + response.name + " \n Email = " + response.email + "  \n Phone = " + response.phone);
                        
                    } else {
                        alert("Something is wrong please try again !!!");

                    }
                }
            });
        }

        function deleteFun(id) {

            var myData = {id: id};

            $.ajax({
                url: "/Employee/Employee/DeleteEmployee/",
                type: "POST",
                data: myData,
                success: function (response) {

                    if (response === true) {

                        alert("Employee Delete Successfully");
                        
                    } else {
                        alert("Something is wrong please try again !!!");

                    }
                }
            });
        }

    </script>
}
